profiles {
    docker {
        docker.enabled = true
        process.container = 'ghcr.io/sa-lee/nf-str:latest'
    }
    
    singularity {
        singularity.enabled = true
        singularity.autoMounts = true
        process.container = 'docker://ghcr.io/sa-lee/nf-str:latest'
    }
    
    cloud {
        docker.enabled = true
        process.container = 'ghcr.io/sa-lee/nf-str:latest'
        process.executor = 'google-batch'  // or awsbatch
    }
}